FROM node:22-alpine

WORKDIR /app

# Copiar package files primero (para cache optimization)
COPY package*.json ./

# Instalar dependencias
RUN npm ci

# Copiar el resto del c√≥digo
COPY . .

# Exponer el puerto
EXPOSE 5173

# Comando para desarrollo (con hot reload)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]